<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/rlt_close_page"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="38dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/public_ic_arrow_back_black" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="29dp"
        android:layout_marginTop="30dp"
        android:text="请设置密码"
        android:textColor="#232323"
        android:textSize="21sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="输入手机号进行找回密码"
        android:textColor="#ff999999"
        android:textSize="13sp"
        android:layout_marginLeft="29dp"
        android:layout_marginTop="4dp"
        />


    <!--手机号-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="60dp">

        <com.fan.baseuilibrary.view.DeletableEditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@null"
            android:hint="请输入手机号"
            android:inputType="number"
            android:maxLength="13"
            android:textColorHint="#ffcccccc"
            android:textColor="@color/color_333333"
            android:drawableRight="@mipmap/icon_clear"
            android:textCursorDrawable="@drawable/edit_cursor"
            android:textSize="14sp"
            android:layout_marginRight="21dp"/>

    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="27dp"
        android:layout_marginRight="27dp"
        android:background="#CCCCCC" />


    <!--验证码-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="13dp">

       <EditText
            android:id="@+id/et_vertical_code"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@null"
            android:hint="请输入验证码"
            android:inputType="number"
            android:maxLength="6"
	        android:textCursorDrawable="@drawable/edit_cursor"
            android:layout_marginRight="160dp"
            android:textColorHint="#ffcccccc"
            android:textColor="@color/color_333333"
            android:textSize="14sp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="27dp">

            <TextView
                android:id="@+id/tv_get_vertical_code"
                android:layout_width="65dp"
                android:layout_height="26dp"
                android:text="验证码"
                android:gravity="center"
                android:textColor="#ffffffff"
                android:textSize="12sp"
                android:background="@drawable/shap_main_theme_selector"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>
    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="27dp"
        android:layout_marginRight="27dp"
        android:background="#CCCCCC" />



    <!--新密码-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="13dp">

       <com.fan.baseuilibrary.view.DeletableEditText
            android:drawableRight="@mipmap/icon_clear"
            android:id="@+id/et_new_pwd"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@null"
            android:hint="请设置新的登录密码"
            android:inputType="textPassword"
            android:maxLength="13"
            android:textColorHint="#ffcccccc"
	        android:textCursorDrawable="@drawable/edit_cursor"
            android:layout_marginRight="21dp"
            android:textColor="@color/color_333333"
            android:textSize="14sp" />

    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="27dp"
        android:layout_marginRight="27dp"
        android:background="#CCCCCC" />


    <!--重复新密码-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="13dp">

       <com.fan.baseuilibrary.view.DeletableEditText
            android:drawableRight="@mipmap/icon_clear"
            android:id="@+id/et_repwd"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@null"
            android:hint="请确认新的登录密码"
	        android:textCursorDrawable="@drawable/edit_cursor"
            android:inputType="textPassword"
            android:maxLength="13"
            android:textColorHint="#ffcccccc"
            android:textColor="@color/color_333333"
            android:textSize="14sp"
            android:layout_marginRight="21dp"/>

    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="27dp"
        android:layout_marginRight="27dp"
        android:background="#CCCCCC" />




    <TextView
        android:id="@+id/tv_comfirm_login"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="38dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/shap_main_theme_selector"
        android:gravity="center"
        android:text="确认修改并登录"
        android:textColor="@color/white"
        android:textSize="16sp" />




</LinearLayout>